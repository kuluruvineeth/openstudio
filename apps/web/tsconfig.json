{
  "extends": "@openstudio/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "postcss.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/ui/src/components/ErrorDisplay.tsx",
    "../../packages/ui/src/components/LoadingContent.tsx",
    "../../packages/ui/src/components/Panel.tsx"
  ],
  "exclude": ["node_modules"]
}
